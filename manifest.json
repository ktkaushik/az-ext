{
  "manifest_version": 2,
  "name": "My Cool Extension",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*","https://www.amazon.in/*"
      ],
      "js": ["jquery.min.js","content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}